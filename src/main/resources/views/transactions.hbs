<h2 class="text-center"> TRANSACTIONS</h2>
</br>
<table id="accountsTable" class = "table">
    <thead>
        <th class="table-dark">Withdraw Account</th>
        <th class="table-dark">Deposit Account</th>
        <th class="table-dark">Timestamp</th>
        <th class="table-dark">ID</th>
        <th class="table-dark">Amount</th>
        <th class="table-dark">Currency</th>
        <th class="table-dark">Fraudulent</th>
        <th class="table-dark">Repeat Transaction</th>
    </thead>
    <tbody>
    {{#transactions}}
        <tr>
            <td scope="col" class ="table-primary">{{withdrawAccount}}</td>
            <td scope="col" class ="table-primary">{{depositAccount}}</td>
            <td scope="col" class ="table-primary">{{timestamp}}</td>
            <td scope="col"class ="table-primary">{{id}}</td>
            <td scope="col" class ="table-primary">{{amount}}</td>
            <td scope="col" class ="table-primary">{{currency}}</td>
            <td scope="col" class ="table-primary">{{fraud}}</td>
            <td scope="col" class ="table-primary"><button type="button"; onclick="repeatFunction('{{id}}', '{{fraud}}');">Repeat</button></td>
        </tr>
    {{/transactions}}
    </tbody>
</table>

 <script>
    function repeatFunction(myid, fraud){
        if(fraud == 'Yes')
            alert("Cannot repeat a fraudulent transaction");
        else {
            window.location.href = "http://localhost:8080/repeat?id=" + myid;
            alert("Transaction repeated successfully");
            window.location.href = "http://localhost:8080/transactions";
        }
    }
 </script>
