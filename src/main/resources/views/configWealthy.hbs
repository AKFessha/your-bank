<script>

    function configWealth(){
        thresh = document.getElementById("value").value;
        window.location.href = "http://localhost:8080/wealthy?newValue=" + thresh;
    }

    function formData() {
        if (document.getElementById("value").value > 2147483647) {
            alert("That threshold is too high, it must be less than 2,147,483,647");
            return;
        }

        configWealth();
        document.getElementById("setter").style.display = "none"
        document.getElementById("results").style.display = "block"
        document.getElementById("resultText").style.display = "block"
        localStorage.setItem('value', document.getElementById("value").value);
        newThreshold = document.getElementById("value").value;
        document.getElementById("results").textContent = (newThreshold * 1.00).toFixed(2);
    }

</script>

